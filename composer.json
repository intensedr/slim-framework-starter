{
    "name": "intensedr/slim3-starter",
    "description": "A skeleton structure for Slim 3",
    "keywords": ["framework", "slim 3"],
    "license": "MIT",
    "type": "project",
    "require": {
    	"php": ">=7.0.0",
        "slim/slim": "^3.8",
        "slim/csrf": "^0.8.3",
        "slim/flash": "^0.4.0",
        "slim/twig-view": "^2.2",
        "symfony/var-dumper": "^3.2",
        "vlucas/phpdotenv": "^2.4",
        "monolog/monolog": "^1.24",
        "illuminate/database": "^5.7",
        "illuminate/pagination": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
