{
    "name": "intensedr/slim3-starter",
    "description": "A skeleton structure for Slim",
    "keywords": ["framework", "slim"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
    	"php": ">=7.0.0",
        "slim/slim": "^3.8",
        "slim/twig-view": "^2.2",
        "symfony/var-dumper": "^3.2",
        "vlucas/phpdotenv": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
